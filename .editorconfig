root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# intellij options
ij_visual_guides = 80, 100

[{*.yml, *.yaml, *.json}]
indent_size = 2

[{Makefile.*, Makefile, makefile, GNUmakefile, *.mk}]
indent_style = tab
tab_width = 4
